# EditorConfig for Connectome-GNN-Suite
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{yml,yaml}]
indent_size = 2

[*.{json,js,ts}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false

[*.{html,css}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 2

[*.{toml,cfg,ini}]
indent_size = 4

[Dockerfile*]
indent_size = 2

[*.{ipynb}]
indent_size = 1